<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>me.drkmatr1984</groupId>
    <artifactId>anvilstringcommand</artifactId>
    <packaging>jar</packaging>
    <name>anvilstringcommand</name>
    <version>0.14</version>
    <!-- This is where I track the version -->

    <repositories>
        <repository>
            <id>Another-Spigot-repo</id>
            <url>http://maven.elmakers.com/repository/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-v18r1</artifactId>
            <version>v18r1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-v18r2</artifactId>
            <version>v18r2</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-v18r3</artifactId>
            <version>v18r3</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-v19r1</artifactId>
            <version>v19r1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-v19r2</artifactId>
            <version>v19r2</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>me.drkmatr1984</groupId>
            <artifactId>anvilstringcommand-common</artifactId>
            <version>0.1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.8.8-R0.1-SNAPSHOT</version>
            <type>jar</type>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>   
    </dependencies>

    <build>
        <directory>../target</directory>
        <finalName>AnvilCommands</finalName>
        <!-- Define filtering for the inclusion of plugin.yml, so we can utilize the pom.xml version in it -->
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <includes>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                    <include>src/main/resources/lang</include>
                </includes>
            </resource>
            <resource>
                <targetPath>lang</targetPath>
                <directory>src/main/resources/lang</directory>
                <includes>
                    <include>language.yml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>me.drkmatr1984:anvilstringcommand-v19r2</include>
                                    <include>me.drkmatr1984:anvilstringcommand-v19r1</include>
                                    <include>me.drkmatr1984:anvilstringcommand-v18r3</include>
                                    <include>me.drkmatr1984:anvilstringcommand-v18r2</include>
                                    <include>me.drkmatr1984:anvilstringcommand-v18r1</include>
                                    <include>me.drkmatr1984:anvilstringcommand-common</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
